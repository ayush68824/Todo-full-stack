{
  "name": "todo-fullstack",
  "version": "1.0.0",
  "description": "Full-stack Todo application",
  "main": "api/index.js",
  "scripts": {
    "start": "node api/index.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd Frontend && npm install && npm run build && cd .. && mkdir -p public && cp -r Frontend/dist/* public/",
    "build:backend": "npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon api/index.js",
    "dev:frontend": "cd Frontend && npm run dev"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.3.4",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.3"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "nodemon": "^2.0.22"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "",
  "license": "MIT",
  "keywords": []
}
